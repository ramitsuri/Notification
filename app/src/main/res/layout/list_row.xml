<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/rulePackageName"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/ruleFilterText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rulePackageName"/>
        <TextView
            android:id="@+id/ruleNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ruleFilterText"/>
        <TextView
            android:id="@+id/ruleNotificationText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ruleNotificationTitle"/>
        <TextView
            android:id="@+id/ruleNotificationOpenOriginal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ruleNotificationText"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/ruleEnabledToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
    </RelativeLayout>
