<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    cardview:cardCornerRadius="1dp"
    android:elevation="0dp"
    android:background="#222222">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="15dp"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#222222">

        <TextView
            android:id="@+id/ruleAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
        <!--<TextView
            android:id="@+id/ruleFilterText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rulePackageName"/>-->
        <TextView
            android:id="@+id/ruleNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruleAppName"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />
    <TextView
        android:id="@+id/ruleSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ruleAppName"
        android:layout_toRightOf="@id/ruleNotificationTitle"
        android:text=" | "
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
            android:id="@+id/ruleNotificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ruleAppName"
            android:layout_toRightOf="@id/ruleSeparator"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"/>
        <!--<TextView
            android:id="@+id/ruleNotificationOpenOriginal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ruleNotificationText"/>-->
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/ruleEnabledToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
        <!--<View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>-->
    </RelativeLayout>

</android.support.v7.widget.CardView>
